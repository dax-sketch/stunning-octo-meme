{
  "name": "client-management-backend",
  "version": "1.0.0",
  "description": "Backend API for Client Management Platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "npm run start",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance",
    "test:api": "jest --testPathPattern=api-integration",
    "test:coverage-report": "jest --testPathPattern=coverage-report",
    "test:all": "jest --coverage --verbose",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.{ts,json,md}",
    "db:setup": "ts-node scripts/setup-appwrite.ts",
    "deploy:setup": "ts-node scripts/setup-production-appwrite.ts",
    "deploy:test": "ts-node scripts/test-services.ts",
    "migrate:appwrite": "ts-node scripts/migrate-to-appwrite.ts",
    "test:appwrite": "ts-node scripts/test-appwrite-connection.ts",
    "cleanup:orphaned": "ts-node scripts/cleanup-orphaned-data.ts"
  },
  "dependencies": {
    "appwrite": "^13.0.0",
    "@sendgrid/mail": "^8.1.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.9.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "twilio": "^5.10.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.17",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "client-management",
    "express",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "MIT"
}
